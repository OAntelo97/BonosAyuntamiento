@page "/beneficiarios/detallebeneficiario/{Id:int}"
@using BonosAytoService.DTOs
@using BonosAyto.Components.DataTables
@inject NavigationManager Navigate




<!--[Título vista]-->
<div class="d-flex justify-content-center my-4">
    <h1 class="text-center">@tituloDetalleBeneficiario</h1>
</div>

<!-- tabs-->
<div class="col-12 h-75">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab">Datos</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab">Bonos</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="container">
                <div class="row">
                    <div class="border border-dark my-3 me-3 p-3">
                        <EditForm Model="detalleValid" class="w-50 mx-auto" OnValidSubmit="@ModificarBeneficiario">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <label for="nombre">Nombre</label>
                            <InputText id="nombre" disabled="@(!edit)" @bind-Value="detalleValid.Nombre" class="form-control" />

                            <label for="apellido1" class="mt-3">Primer Apellido</label>
                            <InputText id="apellido1" disabled="@(!edit)" @bind-Value="detalleValid.PrimerApellido" class="form-control" />

                            <label for="apellido2" class="mt-3">Segundo Apellido</label>
                            <InputText id="apellido2" disabled="@(!edit)" @bind-Value="detalleValid.SegundoApellido" class="form-control" />

                            <label for="dni" class="mt-3">DNI</label>
                            <InputText id="dni" disabled="@(!edit)" @bind-Value="detalleValid.DNI" class="form-control" />

                            <label for="direccion" class="mt-3">Dirección</label>
                            <InputText id="direccion" disabled="@(!edit)" @bind-Value="detalleValid.Direccion" class="form-control" />

                            <label for="cp" class="mt-3">Código Postal</label>
                            <InputNumber id="cp" disabled="@(!edit)" @bind-Value="detalleValid.CodigoPostal" class="form-control" />

                            <label for="tel" class="mt-3">Teléfono</label>
                            <InputText id="tel" disabled="@(!edit)" @bind-Value="detalleValid.Telefono" class="form-control" />

                            <label for="email" class="mt-3">Correo Electrónico</label>
                            <InputText id="email" disabled="@(!edit)" @bind-Value="detalleValid.Email" class="form-control" />
                            <div class="text-end">
                                <button type="submit" disabled="@(!edit)" class="btn btn-dark mt-4 align-content-end rounded-0">Actualizar</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane  " id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <!--bonos-->


            <div class="container mt-3 w-100">
                <div class="row">

                    <div class="col-4 border border-dark px-3 py-5">
                        <!--Formulario asignar talonario-->
                        <h6 class="mb-3 mt-2 text-center">

                            Formulario: Asignar Talonario
                        </h6>


                        <EditForm Model="bonoAsig" OnValidSubmit="@AgregarBono">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <InputSelect @bind-Value="bonoAsig.TipoServicio" class="form-select">
                                <!--cambiar valores-->
                                <option value=' '>Tipo servicio</option>
                                <option value='R'>Restaurante</option>
                            </InputSelect>

                            <div class="container mt-3">
                                <div class="row">
                                    <div class="col">
                                        <label for="fechainicio">Fecha inicio</label>
                                        <InputDate id="fechainicio" onblur="@AutoCaducidad" @bind-Value="bonoAsig.FechaInicio" class="form-control" />
                                    </div>
                                    <div class="col">
                                        <label for="fechafin">Fecha caducidad</label>
                                        <InputDate id="fechafin" onblur="@CheckCaducidad" @bind-Value="bonoAsig.FechaCaducidad" class="form-control" />
                                    </div>
                                </div>
                            </div>

                            <div class="container mt-3">
                                <div class="row">
                                    <div class="col">
                                        <label for="imp">Importe</label>
                                        <InputRadioGroup id="imp" @bind-Value="bonoAsig.Importe">
                                            <div class="form-check">
                                                <InputRadio class="form-check-input" Value="3" />
                                                <label class="form-check-label">3€</label>
                                            </div>
                                            <div class="form-check">
                                                <InputRadio class="form-check-input" Value="6" />
                                                <label class="form-check-label">6€</label>
                                            </div>
                                        </InputRadioGroup>
                                    </div>
                                    <div class="col ">
                                        <label for="can">Cantidad</label>
                                        <InputNumber id="can" @bind-Value="bonoAsig.Activados" />
                                    </div>
                                </div>
                            </div>


                            <div class="text-end">
                                <button type="submit" class="btn btn-dark mt-4 align-content-end rounded-0">Asignar</button>
                            </div>
                        </EditForm>


                    </div>
                    <div class="col-1"></div>

                    <div class="col-7 border border-dark ">
                        <div class="d-inline">

                            <button class="btn btn-dark rounded-0 m-2" onclick="@FiltrarTri">Trimestre</button>
                        </div>


                        <DataTablesBonos>

                            <table class="table" id="listaBonosBeneficiario">
                                <thead class="bg-light ">
                                    <tr>
                                        <th>Tipo servicio</th>
                                        <th>Fecha inicio</th>
                                        <th>Fecha caducidad</th>
                                        <th>Importe</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var bon in listaBonos)
                                    {
                                        <tr data-id="@bon.Id">
                                            <td> @TipoServicioNombre(bon.TipoServicio) </td>
                                            <td>@bon.FechaInicio.ToString("dd-MM-yyyy")</td>
                                            <td>@bon.FechaCaducidad.ToString("dd-MM-yyyy")</td>
                                            <td>@bon.Importe</td>
                                            <td>
                                                <i class="bi bi-search me-1" @onclick="() => VerDetalle(bon.Id)"></i>
                                                <i class="bi bi-pencil me-1 d-inline-block" @onclick="() => Modificar(bon.Id)" style="transform: scaleX(-1);"></i>
                                                <i class="bi bi-trash me-1" @onclick="() => Borrar(bon.Id)"></i>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </DataTablesBonos>

                    </div>

                </div>
            </div>
        </div>
    </div>

</div>