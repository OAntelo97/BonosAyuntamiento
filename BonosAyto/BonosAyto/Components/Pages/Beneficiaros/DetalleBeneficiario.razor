@page "/beneficiarios/detalleBeneficiario/{Id:int}"
@using BonosAytoService.DTOs

<!--[Título vista]-->
<div class="d-flex justify-content-center my-4">
    <h1 class="text-center">@tituloDetalleBeneficiario</h1>
</div>

<!-- tabs-->
<div class="col-12 h-75 mt-3">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab">Datos</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab">Bonos</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane show active border border-dark my-3 me-3 p-3" id="home" role="tabpanel" aria-labelledby="home-tab">
            <!--input form-->
            
            <EditForm Model="detalleValid" OnValidSubmit="@ModificarBeneficiario">
                <DataAnnotationsValidator />
                <ValidationSummary />

                <label for="nombre">Nombre</label>
                <InputText id="nombre" @bind-Value="detalleValid.Nombre" class="form-control" />

                <label for="apellido1" class="mt-3">Primer Apellido</label>
                <InputText id="apellido1" @bind-Value="detalleValid.PrimerApellido" class="form-control" />

                <label for="apellido2" class="mt-3">Segundo Apellido</label>
                <InputText id="apellido2" @bind-Value="detalleValid.SegundoApellido" class="form-control" />

                <label for="dni" class="mt-3">DNI</label>
                <InputText id="dni" @bind-Value="detalleValid.DNI" class="form-control" />

                <label for="direccion" class="mt-3">Dirección</label>
                <InputText id="direccion" @bind-Value="detalleValid.Direccion" class="form-control" />

                <label for="cp" class="mt-3">Código Postal</label>
                <InputNumber id="cp" @bind-Value="detalleValid.CodigoPostal" class="form-control" />

                <label for="tel" class="mt-3">Teléfono</label>
                <InputText id="tel" @bind-Value="detalleValid.Telefono" class="form-control" />

                <label for="email" class="mt-3">Correo Electrónico</label>
                <InputText id="email" @bind-Value="detalleValid.Email" class="form-control" />
                <div class="text-end">
                    <button type="submit" class="btn btn-dark mt-4 align-content-end rounded-0">Actualizar</button>
                </div>
            </EditForm>
            

        </div>
        <div class="tab-pane  " id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <!--bonos--> 
            <!--

            <InputTextArea @bind-Value="materias" class="form-control" readonly rows="10" />
            -->
        </div>
    </div>

</div>