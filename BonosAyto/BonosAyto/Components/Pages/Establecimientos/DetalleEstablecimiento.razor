@page "/establecimientos/{Modo?}/{Id:int}"
@using BonosAytoService.DTOs
@using BonosAyto.Components.DataTables
@inject NavigationManager Navigate


<DetallesTemplate @ref="detallesTemplate" Tipo="PageType.Establecimientos">

    <FormFragment>
         <FormFragment>
            <EditForm Model="detalleE">
                <DataAnnotationsValidator />
                <div class="container">
                    <div class="row">
                        <div class="col-8">
                            <label for="nombre">Nombre</label>
                            <InputText id="nombre" disabled="@(EsModoLectura)" @bind-Value="detalleE.Nombre" placeholder="Nombre" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.Nombre)" />
                        </div>
                        <div class="col-4">
                            <label for="dni">NIF</label>
                            <InputText id="dni" disabled="@(EsModoLectura)" @bind-Value="detalleE.NIF" placeholder="D1111111" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.NIF)" />
                        </div>
                        <div class="col-8">
                            <label for="direccion" class="mt-3">Dirección</label>
                            <InputText id="direccion" disabled="@(EsModoLectura)" @bind-Value="detalleE.Direccion" placeholder="Direción" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.Direccion)" />
                        </div>
                        <div class="col-4">
                            <label for="cp" class="mt-3">Código Postal</label>
                            <InputNumber id="cp" disabled="@(EsModoLectura)" @bind-Value="detalleE.CodigoPostal" placeholder="11111" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.CodigoPostal)" />
                        </div>
                        <div class="col-8">
                            <label for="email" class="mt-3">Correo Electrónico</label>
                            <InputText id="email" disabled="@(EsModoLectura)" @bind-Value="detalleE.Email" placeholder="Correo Electrónico" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.Email)" />
                        </div>
                        <div class="col-4">
                            <label for="tel" class="mt-3">Teléfono</label>
                            <InputText id="tel" disabled="@(EsModoLectura)" @bind-Value="detalleE.Telefono" placeholder="000000000" class="form-control" />
                            <ValidationMessage For="@(() => detalleE.Telefono)" />
                        </div>

                        @if (!EsModoLectura)
                        {
                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-secondary" @onclick="@(()=> @ModificarEstablecimiento())">Actualizar</button>
                            </div>
                        }
                        else
                        {
                            <div class="d-flex justify-content-end mt-3">
                                <button type="button" class="btn btn-secondary" @onclick="@(() => VolverAtras())">Volver</button>
                            </div>
                        }
                    </div>
                </div>
            </EditForm>
        </FormFragment>
    </FormFragment>
   
    <PestanaFragment>
        <li class="nav-item" role="presentation">
            <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab">Canjeos</button>
        </li>        
    </PestanaFragment>

    <PestanaContenidoFragment>
         <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="container mt-3 w-100">
                <div class="mb-5">
                    <div class="row gy-4">
                        <div class="col-lg-6 col-sm-6 cartas text-info">
                            <div class="card rounded shadow border-0 border-bottom border-info border-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <i class="bi bi-people me-2 rounded vehicilos estilo-amarillo fs-1"></i>
                                    </div>
                                    <h4 class="card-text mb-0 text-center">Número de bonos canjeados</h4>
                                    <h5 class="card-title mb-0 me-2 text-center">@metricas.nCanjeos</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 cartas text-primary">
                            <div class="card rounded shadow border-0 border-bottom border-primary border-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center align-items-center">

                                        <i class="bi bi-box-seam me-2 rounded vehicilos estilo-amarillo fs-1"></i>
                                    </div>
                                    <h4 class="card-text mb-0 text-center">Importe acumulado</h4>
                                    <h5 class="card-title mb-0 me-2 text-center">@($"{metricas.importeT:F2}") €</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Establecimiento</th>
                                <th>Beneficiario</th>
                                <th class="text-center">Importe</th>
                                <th class="text-center">Tipo servicio</th>
                                <th>Fecha canjeo</th>
                                <th class="text-center acciones-columna">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var canj in canjeoasEstablecimiento)
                            {
                                <tr>
                                    <td>@canj.establecimiento.Nombre</td>
                                    <td text-truncate>@(canj.beneficiario.Nombre + " " + canj.beneficiario.PrimerApellido + " " + @canj.beneficiario.SegundoApellido)</td>
                                    <td class="text-center">@($"{canj.bono.Importe:F2}") €</td>
                                    <td class="text-center">@mostraTipoServicio(canj.bono.TipoServicio)</td>
                                    <td>@canj.canjeo.FechaCanjeo</td>

                                    <td class="text-center acciones-columna">
                                        <button class="btn btn-sm btn-outline-info me-1" @onclick="@(() => VerDetalleCanjeo(canj.canjeo.Id))">
                                            <i class="bi bi-search" title="Ver detalles"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning me-1" @onclick="@(() => Modificar(canj.canjeo.Id))">
                                            <i class="bi bi-pencil d-inline-block" style="transform:scaleX(-1);" title="Editar campos"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => {IdElimunar = canj.canjeo.Id;AbrirModal("AlertaEliminar");})">
                                            <i class="bi bi-trash" title="Eliminar usuario"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>

              
    </PestanaContenidoFragment>
</DetallesTemplate>
<AlertaModal modalId="AlertaEliminar" color="warning" icono="exclamation-circle">
    <Titulo>Atención</Titulo>
    <Texto>
        Está seguro que quiere eliminar este canjeo?
    </Texto>
    <Descripcion>
        Una vez que se elimine el canjeo, no se podrán revertir los cambios.
    </Descripcion>
    <botonAceptar>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="@(async ()=> await Eliminar(IdElimunar))">Confirmar</button>
    </botonAceptar>
</AlertaModal>
<AlertaModal modalId="EliminarError" color="danger" icono="exclamation-triangle">
    <Titulo>Atención</Titulo>
    <Texto>
        Error al intentar @tituloError el establecimiento
    </Texto>
    <Descripcion>
        @MensajeErrorEliminar
    </Descripcion>
</AlertaModal>


