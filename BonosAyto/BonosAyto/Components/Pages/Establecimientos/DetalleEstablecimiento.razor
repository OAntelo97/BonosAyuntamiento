@page "/establecimientos/detalleestablecimiento/{Id:int}"
@using BonosAytoService.DTOs
@using BonosAyto.Components.DataTables
@inject NavigationManager Navigate




<!--[Título vista]-->
<div class="d-flex justify-content-center my-4">
    <h1 class="text-center">@tituloDetalleEstablecimiento</h1>
</div>

<!-- tabs-->
<div class="col-12 h-75">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab">Datos</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link " data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab">Canjeos</button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">

        <div class="tab-pane show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <div class="container">
                <div class="row">
                    <div class="border border-dark my-3 me-3 p-3">
                        <EditForm Model="detalleE" class="w-50 mx-auto" OnValidSubmit="@ModificarEstablecimiento">
                            <DataAnnotationsValidator />
                            <ValidationSummary />

                            <label for="nombre">Nombre</label>
                            <InputText id="nombre" disabled="@(!edit)" @bind-Value="detalleE.Nombre" class="form-control" />

                            <label for="dni" class="mt-3">NIF</label>
                            <InputText id="dni" disabled="@(!edit)" @bind-Value="detalleE.NIF" class="form-control" />

                            <label for="direccion" class="mt-3">Dirección</label>
                            <InputText id="direccion" disabled="@(!edit)" @bind-Value="detalleE.Direccion" class="form-control" />

                            <label for="cp" class="mt-3">Código Postal</label>
                            <InputNumber id="cp" disabled="@(!edit)" @bind-Value="detalleE.CodigoPostal" class="form-control" />

                            <label for="tel" class="mt-3">Teléfono</label>
                            <InputText id="tel" disabled="@(!edit)" @bind-Value="detalleE.Telefono" class="form-control" />

                            <label for="email" class="mt-3">Correo Electrónico</label>
                            <InputText id="email" disabled="@(!edit)" @bind-Value="detalleE.Email" class="form-control" />
                            <div class="text-end">
                                <button type="submit" disabled="@(!edit)" class="btn btn-dark mt-4 align-content-end rounded-0">Actualizar</button>
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="tab-pane" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <!--bonos-->
            <div class="container mt-3 w-100">
                <div class="mb-5">
                    <div class="row gy-4">
                        <div class="col-lg-6 col-sm-6 cartas text-info">
                            <div class="card rounded shadow border-0 border-bottom border-info border-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center align-items-center">
                                        <i class="bi bi-people me-2 rounded vehicilos estilo-amarillo fs-1"></i>
                                    </div>
                                    <h4 class="card-text mb-0 text-center">Número de bonos canjeados</h4>
                                    <h5 class="card-title mb-0 me-2 text-center">@metricas.nCanjeos</h5>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6 col-sm-6 cartas text-primary">
                            <div class="card rounded shadow border-0 border-bottom border-primary border-2">
                                <div class="card-body">
                                    <div class="d-flex justify-content-center align-items-center">
                                        
                                        <i class="bi bi-box-seam me-2 rounded vehicilos estilo-amarillo fs-1"></i>
                                    </div>
                                    <h4 class="card-text mb-0 text-center">Importe acumulado</h4>
                                    <h5 class="card-title mb-0 me-2 text-center">@($"{metricas.importeT:F2}") €</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th class="nombre-columna text-truncate">Establecimiento</th>
                                <th>beneficiario</th>
                                <th>Importe</th>
                                <th>Tipo servicio</th>
                                <th>Fecha canjeo</th>
                                <th class="text-center">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var canj in canjeoasEstablecimiento)
                            {
                                <tr>
                                    <td class="nombre-columna text-truncate">@canj.establecimiento.Nombre</td>
                                    <td>@canj.beneficiario.Nombre</td>
                                    <td>@canj.bono.Importe</td>
                                    <td>@canj.bono.TipoServicio</td>
                                    <td>@canj.canjeo.FechaCanjeo</td>

                                    <td class="text-center">
                                        <button class="btn btn-sm btn-outline-info me-1" @onclick="@(() => VerDetalle(canj.canjeo.Id))">
                                            <i class="bi bi-search" title="Ver detalles"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-warning me-1" @onclick="@(() => Modificar(canj.canjeo.Id))">
                                            <i class="bi bi-pencil d-inline-block" style="transform:scaleX(-1);" title="Editar campos"></i>
                                        </button>
                                        <button class="btn btn-sm btn-outline-danger" @onclick="@(() => Borrar(canj.canjeo.Id))">
                                            <i class="bi bi-trash" title="Eliminar usuario"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div> 
    </div>

</div>