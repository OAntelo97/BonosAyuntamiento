@inject NavigationManager Navigate

<div class="container-fluid bg-light mb-5">
    <h1 class="text-center display-6 mb-4">
        @Titulo
    </h1>
    <div class="card border border-2 shadow p-4 app-min-vh-75">
        <ul class="nav nav-tabs mb-3" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="lista-tab" data-bs-toggle="tab" data-bs-target="#lista" type="button"
                        role="tab" aria-controls="lista" aria-selected="true">
                    <i class="bi bi-card-checklist me-1"></i> @TituloPestana
                </button>
            </li>
            @PestanaFragment
        </ul>
        <div class="card-body">
            <div class="tab-content">
                <div class="tab-pane fade show active" id="lista" role="tabpanel" aria-labelledby="lista-tab">
                    <div class="row">
                        <!-- Formulario -->
                        <div class="tab-pane show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                            <div class="container">
                                <div class="row">
                                    <div class="card-header bg-primary text-white text-center">
                                        <div class="d-flex justify-content-center align-items-center">
                                            <h5 class="my-1 me-2">@TituloFormulario</h5>
                                            @if (EsModoLectura)
                                            {
                                                <button class="btn p-0" title="Editar" @onclick="() => Editar()">
                                                    <i class="bi bi-pencil fs-4"></i>
                                                </button>
                                            }
                                            else
                                            {
                                                <button class="btn p-0" title="Ver Detalle" @onclick="() => VerDetalle()">
                                                    <i class="bi bi-eye fs-4"></i>
                                                </button>
                                            }
                                        </div>

                                    </div>
                                    <div class="border border-2 shadow mb-3 me-3 p-3" >
                                         @FormFragment
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                @PestanaContenidoFragment
            </div>
        </div>
    </div>
</div>
